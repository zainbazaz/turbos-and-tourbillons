<%- include('partials/headerLoggedIn') -%>
  <div class=" min-h-screen flex flex-col items-center space-y-6  bg-base-200 p-2 pt-6">
    <div class="text-center p-4 rounded-lg md:self-start md:ml-28 bg-base-100 ">
      <h2 class="text-2xl font-bold text-primary-title">Explore All Posts</h2>
    </div>
    <div class="w-full min-h-screen flex flex-wrap justify-center items-baseline  py-4 bg-base-200 md:space-x-0 gap-4">
      <% for(var i=0; i<posts.length; i++) {%>
        
          <div class="btn-ghost w-96 p-4 bg-base-100 rounded-3xl flex flex-col border border-primary shadow-sm shadow-secondary hover:shadow-none">
            <div class="w-full flex mb-4 bg-base-500">
              <div class="avatar placeholder rounded-full p-2 pr-4 h-12 bg-neutral">
                <div class="bg-accent text-primary-content rounded-full w-8 ">
                  <span class="text-xl"><%= posts[i].createdBy[0].toUpperCase() %></span>
                </div>
                <h2 class="card-title ml-4"><%=  posts[i].createdBy %></h2>
              </div>
            </div>
            <a href="/post/<%= posts[i]._id%>">
              <div class="w-full h-64  ">
                  <img class="w-full max-h-full rounded-md" src="<%= posts[i].image%>"  />
              </div>
              <div class="card-body bg-base-200 rounded-lg flex-row justify-between">
                <h2 class="card-title"><%= posts[i].title%></h2>
                <div class="flex justify-center space-x-2 ">
                  <span class="text-md"><i class="fa-regular fa-heart fa-sm"></i> <%= posts[i].likes%></span>
                  <span class="text-md"><i class="fa-regular fa-comment fa-sm"></i> <%= posts[i].comments%></span>
                </div>
              </div>
            </div>
            </a>  
      <% } %>
    </div>
  </div>
<%- include('partials/footer') -%>